{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "dom"
    ],
    "types": ["vite/client", "node"],
    "sourceMap": false,
    "noEmitOnError": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/dist/**", "**/node_modules/**"]
}